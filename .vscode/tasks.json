{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
                {
                    "label": "Run Kimani Backend",
                    "type": "shell",
                    "command": "cargo",
                    "args": [
                        "run",
                        "--package",
                        "revolt-delta",
                        "revolt-bonfire"
                    ],
                    "options": {
                        "env": {
                            "OPENSSL_DIR": "C:\\Program Files\\OpenSSL-Win64",
                            "RUST_BACKTRACE": "1"
                        }
                    },
                    "presentation": {
                        "echo": true,
                        "reveal": "always",
                        "focus": false,
                        "panel": "shared"
                    },
                    "problemMatcher": []
                },
                {
            "label": "Cargo Build",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build"
            ],
            "options": {
                "env": {
                    "OPENSSL_DIR": "C:\\Program Files\\OpenSSL-Win64",
                    "RUSTFLAGS": "-Awarnings"
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}